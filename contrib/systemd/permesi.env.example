# Required
# Base DSN (username/password are injected by Vault via the Agent Proxy)
PERMESI_DSN=postgres://127.0.0.1:5432/permesi
PERMESI_ADMISSION_PASERK_URL=https://genesis.permesi.localhost:8000/paserk.json

# Vault Agent Connection (Sidecar Mode)
# No RoleID/SecretID required; the Agent handles authentication.
# PERMESI_VAULT_URL defaults to unix:///run/permesi/agent.sock in systemd service.
# PERMESI_VAULT_URL=unix:///run/permesi/agent.sock

# Optional
PERMESI_PORT=8001
PERMESI_LOG_LEVEL=info
PERMESI_FRONTEND_BASE_URL=https://permesi.example.com
PERMESI_SESSION_TTL_SECONDS=43200
