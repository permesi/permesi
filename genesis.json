{
  "openapi": "3.1.0",
  "info": {
    "title": "genesis",
    "description": "Token Zero generator for permesi",
    "contact": {
      "name": "Team Permesi",
      "email": "team@permesi.dev"
    },
    "license": {
      "name": "BSD-3-Clause",
      "identifier": "BSD-3-Clause"
    },
    "version": "0.2.15"
  },
  "paths": {
    "/headers": {
      "get": {
        "tags": [
          "headers"
        ],
        "operationId": "headers",
        "responses": {
          "200": {
            "description": "headers"
          }
        }
      }
    },
    "/health": {
      "get": {
        "tags": [
          "health"
        ],
        "operationId": "health",
        "responses": {
          "200": {
            "description": "Database connection is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Health"
                  }
                }
              }
            }
          },
          "503": {
            "description": "Database connection is unhealthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Health"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/paserk.json": {
      "get": {
        "tags": [
          "paserk"
        ],
        "operationId": "paserk",
        "responses": {
          "200": {
            "description": "PASERK public keys",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/token": {
      "get": {
        "tags": [
          "token"
        ],
        "operationId": "token",
        "parameters": [
          {
            "name": "client_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Return token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Token"
                }
              }
            }
          },
          "400": {
            "description": "Missing or invalid client ID",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Error creating the token",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Health": {
        "type": "object",
        "required": [
          "commit",
          "name",
          "version",
          "database"
        ],
        "properties": {
          "commit": {
            "type": "string"
          },
          "database": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "version": {
            "type": "string"
          }
        }
      },
      "Token": {
        "type": "object",
        "required": [
          "token"
        ],
        "properties": {
          "token": {
            "type": "string"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "genesis",
      "description": "Token Zero generator API"
    }
  ]
}
